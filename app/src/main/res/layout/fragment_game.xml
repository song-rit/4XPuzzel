<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context="com.example.awidcha.numbergame.ui.fragment.GameFragment">


    <LinearLayout
        android:id="@+id/view_group_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp">

        <EditText
            android:id="@+id/edit_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="1"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:padding="5dp"
            android:textColorHint="@color/whiteGrey" />

        <EditText
            android:id="@+id/edit_number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:hint="2"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:padding="5dp"
            android:textColorHint="@color/whiteGrey" />

        <EditText
            android:id="@+id/edit_number3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:hint="3"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:padding="5dp"
            android:textColorHint="@color/whiteGrey" />

        <EditText
            android:id="@+id/edit_number4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:hint="4"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:padding="5dp"
            android:textColorHint="@color/whiteGrey" />
    </LinearLayout>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_group_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_button"
        android:text="OK"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />
</RelativeLayout>
